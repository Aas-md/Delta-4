<% layout('/layouts/boilerplates.ejs') %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <form method="POST" action="/listings" novalidate class="needs-validation">
                <div class="mb-3 form-group">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" required placeholder="Enter your title"
                        class="form-control">
                           <div class="invalid-feedback">
                        Please enter title
                </div>

                </div>
                <div class="invalid-feedback">
                        Please enter title
                </div>

                <div class="mb-3 form-group">
                    <label for="description" class="form-label">Description</label>
                    <textarea required name="listing[description]" placeholder="description"
                        class="form-control"></textarea>
                        <div class="invalid-feedback">
                        Please enter description
                </div>
                </div>
                

                <div class="row">
                    <div class="mb-3 form-group col-md-8">
                        <label for="image" class="form-label">Image url</label>
                        <input type="text" name="listing[image]" placeholder="Enter Image url" class="form-control">
                    </div>


                    <div class="mb-3 form-group col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input required type="text" name="listing[price]" placeholder="Enter price"
                            class="form-control" >
                    </div>

                </div>
                <div class="mb-3 form-group">
                    <label for="country" class="form-label">country </label>
                    <input required type="text" name="listing[country]" placeholder="country" class="form-control">
                </div>

                <div class="mb-3 form-group">
                    <label for="location" class="form-label">Location </label>
                    <input required type="text" name="listing[location]" placeholder="Location" class="form-control">
                </div>

                <button class="btn btn-dark btn-add">Submit</button>
            </form>
        </div>
    </div>