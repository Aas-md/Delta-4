<% layout('/layouts/boilerplates.ejs') %>


    <div class="mt-4 mb-4 row mt-3">
        <h1 class="col-6 offset-2">SignUp on wanderlust</h1>
        <div class=" col-6 offset-2">

            <form action="/signup" method="POST" novalidate class="needs-validation">
                <div class="mb-3 form-group">
                    <label for="username" class="form-label" class="form-label">username :</label>
                    <input type="text" class="form-control" name="username" required>
                      <div class="valid-feedback">Loosk Good!</div>
                </div>
              

                  <div class="mb-3 form-group">
                    <label for="email" class="form-label" class="form-label">email :</label>
                    <input type="email" class="form-control" name="email" required>
                </div>

                  <div class="mb-3 form-group">
                    <label for="password" class="form-label" class="form-label">password :</label>
                    <input type="password" class="form-control" name="password" required>
                </div>

                <button class="btn btn-success">SignUp</button>
            </form>

        </div>
    </div>